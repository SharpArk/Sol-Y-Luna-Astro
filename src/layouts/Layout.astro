---
const { Title, Description, Active } = Astro.props;
import { ClientRouter } from "astro:transitions";

import "../styles/global.css";
import Header from "../components/header.astro";

export interface Props {
  Title: string;
  Description: string;
  Active: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={Description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oxanium:wght@200..800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Oxanium:wght@200..800&display=swap"
      rel="stylesheet"
    />
    <title>{Title}</title>
    <ClientRouter />
  </head>
  <body class="bg-[#343446] text-white">
    <Header active={Active} />
    <slot />
  </body>
</html>

<style>
  * {
    font-family: "Fira Sans", sans-serif;
  }
</style>
