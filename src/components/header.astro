---
const Active = Astro.props.active || "Index";
export const prerender = true;
---

<header
  class="flex fixed top-[10px] left-[50%] translate-x-[-50%] rounded-full p-4 bg-[#f83c845d] text-black uppercase font-bold backdrop-blur-2xl z-50"
>
  <nav class="flex gap-4 justify-center items-center">
    <a
      class={`p-2 rounded-full relative transition-colors duration-300 ${Active == "index" ? "text-white" : "text-black"}`}
      href="/"
    >
      Sol y Luna
      <div
        class={`absolute -z-10 top-0 left-0 h-full w-full rounded-full transition-all duration-300 ${Active == "index" ? "bg-[#3b2249]" : "bg-transparent transition-none"}`}
        transition:name={`${Active == "index" ? "header_element" : ""}`}
      >
      </div>
    </a>
    <a
      class={`p-2 rounded-full relative transition-colors duration-300 ${Active == "Tienda" ? "text-white" : "text-black"}`}
      href="/Tienda"
    >
      Tienda en linea
      <div
        class={`absolute -z-10 top-0 left-0 h-full w-full rounded-full transition-all duration-300 ${Active == "Tienda" ? "bg-[#3b2249]" : "bg-transparent transition-none"}`}
        transition:name={`${Active == "Tienda" ? "header_element" : ""}`}
      >
      </div>
    </a>
    <a
      class={`p-2 relative transition-colors duration-300 ${Active == "Contacto" ? "text-white" : "text-black"}`}
      href="/Contacto"
    >
      Contacto
      <div
        class={`absolute -z-10 top-0 left-0 h-full w-full rounded-full transition-all duration-300 ${Active == "Contacto" ? "bg-[#3b2249]" : "bg-transparent transition-none"}`}
        transition:name={`${Active == "Contacto" ? "header_element" : ""}`}
      >
      </div>
    </a>
  </nav>
</header>
